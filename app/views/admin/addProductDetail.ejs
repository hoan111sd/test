<%- include('./includes/header') %>
    <title>Add New Product></title>
    </head>
    <%- include('./includes/headerUnder') %>

        <body class="skin-blue">
            <div class="wrapper row-offcanvas row-offcanvas-left">
                <%- include('./includes/sideBar') %>
                    <aside class="right-side">
                        <section class="content-header">
                            <h1>
                                <i class="fa fa-th-list"></i>
                                Add List
                                <small>Add a List</small>
                            </h1>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="/">
                                        <i class="fa fa-dashboard"></i> Home</a>
                                </li>
                                <li class="active">Add List</li>
                            </ol>
                        </section>
                        <section class="content">
                            <div class="col-lg-8 col-md-8 col-xs-12">
                                <div class="box box-warning">
                                    <div class="box-header">
                                        <h3 class="box-title">Add a List</h3>
                                    </div>
                                    <div class="box-body">

                                        <div class="alert alert-danger alert-dismissable" style="display: none;">
                                            <i class="fa fa-ban"></i>
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                            <b>Error !
                                                <span id="errorMessage"></span>
                                            </b>
                                        </div>

                                        <form method="POST" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <label>Title</label>
                                                <input type="text" id="slidetitle" class="form-control input-lg" placeholder="Enter Title">
                                            </div>
                                            <div class="form-group">
                                                <label>Link(optional)</label>
                                                <input type="text" id="slidelink" class="form-control input-lg" placeholder="Enter Permalink">
                                            </div>
                                            <input type="hidden" id="slidearticle" value="<%= listId %>" class="form-control input-lg" placeholder="Enter Title">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea class="form-control" placeholder="Write Description" id="slidedescription" rows="5" required="" name="description"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <a class="btn btn-primary btn-xs mrg-10-top">You can Embed video of youtube.com , dailymotion.com , vimeo.com , metacafe.com.</a>
                                            </div>
                                            <div class="form-group">
                                                <img style="display:none" style="height:auto; width:200px !important;" class="logo_web" id="srcslide" src="./public/images/slide.png"
                                                />
                                            </div>
                                            <div id="showSlideOption" class="form-group">
                                                <a onclick="SlideOption()" class="btn btn-default">
                                                    <i class="fa fa-files-o"></i>Add New Slide </a>
                                            </div>
                                            <div style="display:none" id="selectedSlideOption" class="form-group">
                                                <a onclick="SelectedImageSlideOption()" class="btn btn-primary">
                                                    <i class="fa fa-picture-o"></i> Image Slide </a>
                                                <a onclick="SelectedVideoSlideOption()" class="btn btn-info">
                                                    <i class="fa fa-video-camera"></i> Video Slide</a>
                                            </div>
                                            <div id="showuploadSlide" style="display:none" class="form-group">
                                                <input class="hide show-large-logo" type="file" id="uploadslide" onchange="readslide(this);" style="display:none;" />
                                                <a onclick="triggerslide()" class="btn btn-success">
                                                    <i class="fa fa-upload"></i> Upload Slide</a>
                                                <a onclick="resetOption()" class="btn btn-warning">
                                                    <i class="fa fa-chevron-right"></i> Reset </a>
                                            </div>
                                            <div style="display:none" id="showEmbedLink" class="form-group">
                                                <label>Video Url</label>
                                                <input type="text" id="slidevideoLink" class="form-control input-lg" placeholder="Enter Video Link">
                                                </br>
                                                <a onclick="resetOption()" class="btn btn-warning">
                                                    <i class="fa fa-chevron-right"></i>Reset</a>
                                            </div>
                                            <hr>
                                            <div class="form-group">
                                                <a onclick="showSlides()" class="btn btn-default btn-md">
                                                    <i class="fa fa-chevron-left"></i>Back</a>
                                                <a onclick="slideSubmit()" class="btn btn-primary btn-md">
                                                    <i class="fa fa-floppy-o"></i>Save</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </aside>
            </div>
            <%- include('./includes/footer') %>